name = "pkgconf"
description = "pkgconf"
tag = "2.0.3"
tarball = "https://github.com/pkgconf/pkgconf/archive/refs/tags/pkgconf-%s.tar.gz"
dependencies = [
    "kati",
    "m4",
    "autotools"
]
build = [
    "./autogen.sh",
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS CXXFLAGS=$CFLAGS LDFLAGS=$LDFLAGS ./configure",
    "make $MKFLAGS"
]
install = [
    "make install DESTDIR=$DEST"
]