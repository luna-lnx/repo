name = "gettext-tiny"
description = "drop-in replacement for gettext without the gnu"
tag = "master"
tarball = "https://github.com/sabotage-linux/gettext-tiny/archive/refs/heads/%s.tar.gz"
dependencies = [
    "kati"
]
build = [
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS CXXFLAGS=$CFLAGS LDFLAGS=$LDFLAGS make LIBINTL=NOOP $MKFLAGS"
]
install = [
    "make LIBINTL=NOOP install DESTDIR=$DEST"
]