#https://ftp.gnu.org/gnu/autoconf/autoconf-latest.tar.gz
name = "autoconf"
description = "autoconf"
tag = "latest"
tarball = "https://ftp.gnu.org/gnu/autoconf/autoconf-%s.tar.gz"
dependencies = [
    "kati",
    "perl",
    "m4"
]
build = [
    "chmod +x ./configure",
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS CXXFLAGS='$CFLAGS -std=c++14' LDFLAGS=$LDFLAGS ./configure",
    "make $MKFLAGS"
]
install = [
    "make install DESTDIR=$DEST"
]