#https://github.com/akimd/bison/archive/refs/tags/v3.8.2.tar.gz
name = "gperf"
description = "gperf"
tag = "3.1"
tarball = "https://ftp.gnu.org/pub/gnu/gperf/gperf-%s.tar.gz"
dependencies = [
    "kati"
]
build = [
    "aclocal",
    "chmod +x ./configure",
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS CXXFLAGS="$CFLAGS -std=c++14" LDFLAGS=$LDFLAGS ./configure",
    "make $MKFLAGS"
]
install = [
    "make install DESTDIR=$DEST"
]