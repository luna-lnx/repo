name = "musl"
description = "musl libc"
tag = "1.2.4"
tarball = "https://git.musl-libc.org/cgit/musl/snapshot/musl-%s.tar.gz"
dependencies = [
    "make"
]
build = [
    "chmod +x ./configure",
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS LDFLAGS=$LDFLAGS ./configure",
    "make $MKFLAGS"
]
install = [
    "chmod +x ./tools/install.sh",
    "make install DESTDIR=$DEST"
]